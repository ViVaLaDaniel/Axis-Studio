{
  "DATABASE_NAME": "MICRO_INTERACTIONS_DB",
  "VERSION": "1.0",
  "PURPOSE": "Анимации и микро-взаимодействия которые улучшают UX и создают delight",
  
  "BUTTON_INTERACTIONS": {
    "hover_states": {
      "scale_up": {
        "transform": "scale(1.05)",
        "duration": "200ms",
        "easing": "ease-out",
        "psychology": "Affordance (button is clickable)",
        "best_for": "Primary CTAs"
      },
      "lift": {
        "transform": "translateY(-2px)",
        "box_shadow": "0 4px 12px rgba(0,0,0,0.15)",
        "duration": "250ms",
        "psychology": "Depth, interactivity",
        "best_for": "Cards, secondary buttons"
      },
      "fill": {
        "background": "Inverts (outline → filled)",
        "duration": "300ms",
        "psychology": "Clear state change",
        "best_for": "Secondary buttons"
      },
      "glow": {
        "box_shadow": "0 0 20px rgba(color, 0.5)",
        "duration": "300ms",
        "best_for": "Accent buttons, special offers"
      }
    },
    
    "active_states": {
      "press_down": {
        "transform": "scale(0.98)",
        "duration": "100ms",
        "psychology": "Physical button press feel"
      },
      "ripple": {
        "animation": "Circle expands from click point",
        "duration": "600ms",
        "psychology": "Material Design pattern, tactile feedback"
      }
    },
    
    "loading_states": {
      "spinner": {
        "visual": "Rotating circle",
        "duration": "1s infinite",
        "usage": "ATC button during add"
      },
      "pulse": {
        "animation": "opacity 0.5 → 1 → 0.5",
        "duration": "1.5s infinite",
        "usage": "Skeleton loaders"
      },
      "text_change": {
        "sequence": ["Add to Cart", "Adding...", "Added! ✓", "Add to Cart (after 2s)"],
        "timing": "Instant → 2s → 2s → reset",
        "psychology": "Clear feedback, reassurance"
      }
    },
    
    "success_states": {
      "checkmark_animation": {
        "visual": "Checkmark draws in (SVG stroke animation)",
        "duration": "400ms",
        "easing": "ease-out",
        "usage": "Form submission, ATC success",
        "psychology": "Completion, satisfaction"
      },
      "confetti": {
        "trigger": "Special events (first purchase, milestone)",
        "duration": "2s",
        "particles": "20-50",
        "psychology": "Delight, celebration",
        "caution": "Use sparingly (loses impact if overused)"
      }
    }
  },
  
  "FORM_INTERACTIONS": {
    "input_focus": {
      "border_glow": {
        "border": "1px → 2px",
