  "DECISION_MAKING_FRAMEWORKS": {
    "system_1_vs_system_2": {
      "system_1": {
        "description": "Fast, automatic, emotional",
        "triggers": "Images, colors, first impressions",
        "design_for": "Make it beautiful, trustworthy at first glance"
      },
      "system_2": {
        "description": "Slow, deliberate, logical",
        "triggers": "Reading specs, comparing options, reviews",
        "design_for": "Clear structure, easy comparisons, complete info"
      }
    },
    
    "fogg_behavior_model": {
      "formula": "Behavior = Motivation + Ability + Trigger",
      "motivation": "Increase desire (benefits, social proof, urgency)",
      "ability": "Make it easy (guest checkout, autofill, fast load)",
      "trigger": "Clear CTA (Add to Cart, Buy Now)",
      "ecommerce_application": "Maximize all 3 for highest conversion"
    }
  }
}
