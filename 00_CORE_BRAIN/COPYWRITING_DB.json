  "HEADLINE_FORMULAS": {
    "problem_solution": {
      "formula": "Tired of [problem]? [Product] is the answer",
      "examples": [
        "Tired of wrinkles? Youth Serum is the answer",
        "Struggling with sleep? Dream Pillow will change your life"
      ],
      "psychology": "Identifies pain point, offers immediate solution",
      "when_to_use": "Problem-aware audience",
      "effectiveness": "High (direct, clear value prop)"
    },
    
    "benefit_oriented": {
      "formula": "Get [desirable outcome] in [timeframe]",
      "examples": [
        "Get glowing skin in 7 days",
        "Lose 10 pounds in 30 days (ethical claim)",
        "Master Italian in 3 months"
      ],
      "psychology": "Outcome-focused, time-bound (urgency)",
      "caution": "Claims must be realistic and legal"
    },
    
    "curiosity": {
      "formula": "The secret to [desirable state]",
      "examples": [
        "The secret to effortless style",
        "What top chefs know about kitchen knives"
      ],
      "psychology": "Curiosity gap (opens loop in brain)",
      "when_to_use": "Blog posts, email subject lines"
    },
    
    "social_proof": {
      "formula": "[Number]+ customers [action/result]",
      "examples": [
        "50,000+ customers trust us",
        "10,000 5-star reviews and counting"
      ],
      "psychology": "Herd mentality, safety in numbers",
      "when_to_use": "Homepage, product pages"
    },
    
    "how_to": {
      "formula": "How to [achieve result] without [pain point]",
      "examples": [
        "How to style outfits without breaking the bank",
        "How to whiten teeth without sensitivity"
      ],
      "psychology": "Educational + problem avoidance",
      "when_to_use": "Blog, guides, content marketing"
    },
    
    "comparison": {
      "formula": "[Product A] vs [Product B]: Which is right for you?",
      "examples": [
        "Silk vs Cotton Pillowcases: The Truth",
        "Organic vs Conventional: What's worth it?"
      ],
      "psychology": "Helps decision-making, builds authority",
      "when_to_use": "High-consideration purchases"
    }
  },
  
