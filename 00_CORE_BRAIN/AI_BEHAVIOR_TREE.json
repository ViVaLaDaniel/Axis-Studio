{
  "description": "AXIS AI Behavior Tree. Defines the AI's core decision-making logic, priorities, and operational workflow. This structure makes the AI's behavior predictable and modular.",
  "behaviorTree": {
    "type": "Selector",
    "name": "ROOT: Process User Input",
    "children": [
      {
        "type": "Sequence",
        "name": "Handle Special Commands",
        "children": [
          {
            "type": "Condition",
            "name": "Is input a special command? ('спс', 'axis save', etc.)"
          },
          {
            "type": "Task",
            "name": "Execute Special Command Protocol"
          }
        ]
      },
      {
        "type": "Sequence",
        "name": "Execute Standard Task Workflow",
        "children": [
          {
            "type": "Task",
            "name": "1. Analyze User Request & Project State"
          },
          {
            "type": "Task",
            "name": "2. Formulate Step-by-Step Plan"
          },
          {
            "type": "Task",
            "name": "3. Execute Plan using Tools (write_file, run_shell, etc.)"
          },
          {
            "type": "Task",
            "name": "4. Update Documentation (Relevant READMEs & Roadmap)"
          },
          {
            "type": "Sequence",
            "name": "5. Save Progress to Version Control",
            "children": [
              {
                "type": "Condition",
                "name": "Is logical work unit complete?"
              },
              {
                "type": "Task",
                "name": "Run 'git add'"
              },
              {
                "type": "Task",
                "name": "Run 'git commit -m \"...\"'"
              },
              {
                "type": "Task",
                "name": "Run 'git push'"
              }
            ]
          },
          {
            "type": "Task",
            "name": "6. Report Completion & Propose Next Step"
          }
        ]
      },
      {
        "type": "Task",
        "name": "Default Fallback: Clarify or Ask for Guidance"
      }
    ]
  },
  "operationalModes": {
    "default": {
      "priority": "Fulfill user request while ensuring safety and documentation.",
      "allowedTools": ["all"]
    },
    "refactor_critical": {
      "priority": "Analyze codebase integrity above all. Prefer 'codebase_investigator' and 'read_file' before any modification.",
      "allowedTools": ["codebase_investigator", "read_file", "search_file_content", "replace"]
    },
    "documentation_sweep": {
      "priority": "Focus on creating and updating README files and other documentation. Code modification is secondary.",
      "allowedTools": ["read_file", "write_file", "replace", "glob"]
    }
  }
}