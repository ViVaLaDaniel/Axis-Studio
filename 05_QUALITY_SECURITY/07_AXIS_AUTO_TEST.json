{
  "automated_testing_suite": {
    "philosophy": "Catch bugs before humans do. Zero tolerance for performance regression.",
    "ci_cd_pipeline_steps": [
      {
        "step": 1,
        "name": "Linting & Syntax Check",
        "tool": "Shopify Theme Check CLI",
        "reference": "self",
        "fail_action": "Block commit on any errors."
      },
      {
        "step": 2,
        "name": "Security Scan",
        "tool": "AXIS Security Scanner",
        "reference": "11_AXIS_SECURITY_SCANNER.json",
        "command": "RUN --file=11_AXIS_SECURITY_SCANNER.json",
        "fail_action": "Block deployment on CRITICAL vulnerabilities."
      },
      {
        "step": 3,
        "name": "Performance Budget Check",
        "tool": "AXIS Performance Budget",
        "reference": "15_PERFORMANCE_BUDGET.json",
        "command": "VALIDATE --file=15_PERFORMANCE_BUDGET.json",
        "fail_action": "Block deployment if hard limits are exceeded."
      },
      {
        "step": 4,
        "name": "Lighthouse CI",
        "tool": "Google Lighthouse",
        "reference": "self",
        "fail_action": "Block deployment if score < threshold."
      },
      {
        "step": 5,
        "name": "Visual Regression Testing",
        "tool": "Percy / BackstopJS",
        "reference": "self",
        "fail_action": "Require manual approval on pixel difference > 0.1%."
      }
    ],
    "lighthouse_ci": {
      "command": "lhci autorun --config=lighthouserc.json",
      "thresholds": {
        "performance": 90,
        "accessibility": 95,
        "best_practices": 100,
        "seo": 100
      }
    },
    "theme_check": {
      "tool": "Shopify Theme Check CLI",
      "command": "theme check --fail-level=error --strict",
      "config": {
        "Liquid/Syntax": "enabled",
        "Translation/MissingKeys": "enabled",
        "Performance/ImgLazyLoading": "enabled"
      }
    },
    "visual_regression": {
      "tool": "Percy / BackstopJS",
      "snapshots": [
        "Homepage (Desktop/Mobile)",
        "Product Page (Variant Switch)",
        "Cart Drawer (Open State)",
        "Collection Filter (Expanded)"
      ],
      "tolerance": "0.1% pixel difference"
    }
  }
}