          "when_to_use": ["mobile", "long PDP", "fashion", "beauty"],
          "when_to_avoid": ["luxury", "minimalist brands"],
          "risks": ["too intrusive → falls to dark pattern"],
          "success_indicators": ["↑ ATC rate", "↑ scroll depth"]
