{
  "system_name": "AXIS_DEMO_MASTER",
  "version": "1.0",
  "philosophy": "A great theme is sold by a great demo store.",
  "objective": "Generate high-quality, realistic, and niche-specific demo content to pass Shopify's review and impress potential buyers.",
  "output_formats": {
    "products": "products.csv (Shopify standard format)",
    "settings": "settings_data.json (for theme presets)",
    "blog": "blog_posts.md (outlines and content ideas)"
  },
  "global_settings": {
    "product_count": 50,
    "collection_count": 8,
    "blog_post_count": 5,
    "image_source": "Unsplash API (or manual download via provided queries)",
    "text_source": "AI-generated based on templates"
  },
  "niche_templates": {
    "furniture": {
      "name": "Furniture & Home Decor",
