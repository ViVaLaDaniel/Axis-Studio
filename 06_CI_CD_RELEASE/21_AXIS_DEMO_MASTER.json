  "generation_protocol": {
    "step_1_select_niche": "User specifies niche (e.g., 'furniture')",
    "step_2_generate_products": {
      "action": "Use 'product_templates' for the selected niche to generate a products.csv file",
      "logic": "Loop through templates, generate unique titles, descriptions, and prices within the defined range.",
      "image_handling": "Generate Unsplash search queries for each product type. User to download images manually."
    },
    "step_3_generate_collections": "Create smart collections based on product types and tags.",
    "step_4_generate_blog_posts": "Use 'blog_post_ideas' to generate markdown files with outlines for each post.",
